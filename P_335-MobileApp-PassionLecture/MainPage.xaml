<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P_335_MobileApp_PassionLecture.MainPage">
    <ContentPage.Content>
        <ScrollView BackgroundColor="#5DA399">
            <StackLayout>
                <Label BackgroundColor="#9BBEC7" Text="Passion - Lecture" TextColor="Black" HeightRequest="150" FontSize="40" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

                <Frame BackgroundColor="#5DA399" BorderColor="#5DA399">
                    <SearchBar x:Name="SearchBar" TextChanged="OnSearchBarTextChanged" Margin="0, 30, 0, 50" BackgroundColor="#D9D9D9" />
                </Frame>

                <ActivityIndicator x:Name="LoadingIndicator"
                               IsVisible="True"
                               IsRunning="True"
                               VerticalOptions="CenterAndExpand"
                               HorizontalOptions="CenterAndExpand"/>
                
                <StackLayout x:Name="BooksStackLayout" IsVisible="False"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
