<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P_335_MobileApp_PassionLecture.MainPage">

    <ScrollView>
        <VerticalStackLayout BackgroundColor="#5DA399">
            <HorizontalStackLayout BackgroundColor="#9BBEC7" HeightRequest="120" WidthRequest="415">
                <Label Text="Passion - Lecture" FontSize="35" SemanticProperties.HeadingLevel="Level1" VerticalOptions="Center" Padding="70, 0, 0, 0"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="0, 20, 0, 0">
                <ImageButton Source="Resources/Images/onepiece1.jpg" WidthRequest="200" HeightRequest="200" Clicked="ImageButton_Clicked" Margin="-15, 0, 0, 0"/>
                <Label Text="Lorem ipsum dae" BackgroundColor="#414770" TextColor="White" WidthRequest="190"/>
            </HorizontalStackLayout>

            <Button x:Name="books" Clicked="Button_Clicked" BackgroundColor="White" TextColor="Black" Text="GET ALL BOOKS" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
